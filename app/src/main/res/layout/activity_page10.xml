<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ggreenbackground"
    tools:context=".page10">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="@color/green"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/record"
        android:layout_width="174dp"
        android:layout_height="74dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/darkgreen"
        android:text="ToggleButton"
        android:textAlignment="center"
        android:textColor="#FBF8F8"
        android:textOff="أبدأ التسجيل"
        android:textOn="إيقاف التسجيل"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="415dp"
        android:layout_height="101dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="29dp">

        <ImageButton
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:backgroundTint="#002E8B57"
            app:srcCompat="@drawable/account"
            tools:ignore="MissingConstraints" />

        <Space
            android:layout_width="188dp"
            android:layout_height="64dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="123dp"
            android:layout_height="31dp"
            android:backgroundTint="#002E8B57"
            app:srcCompat="@drawable/arrow"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="291dp"
        android:layout_height="243dp"
        android:layout_margin="30dp"
        app:cardBackgroundColor="#C8FFFFFF"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.32999998"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:gravity="bottom|clip_horizontal|center|clip_vertical|start|right|center_horizontal|fill|fill_horizontal|top|left|center_vertical|fill_vertical|end"
            android:text="الكلمة "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textDirection="locale"
            android:textSize="28sp"
            android:typeface="monospace" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnnext"
        android:layout_width="174dp"
        android:layout_height="74dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/darkgreen"
        android:text="مشاهدة النتيجة"
        android:textAlignment="center"
        android:textColor="@color/beige"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />

</androidx.constraintlayout.widget.ConstraintLayout>